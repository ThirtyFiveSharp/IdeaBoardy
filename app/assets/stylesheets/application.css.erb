.concept { display:inline; padding: 0 0.4em; }
.concept:after { content: ""; border-right: 1px #a9a9a9 dashed; }
.concept-info { font-size: 0.9em; font-weight: bold; font-style: italic; text-decoration: underline; }
.concept-info:hover { cursor: pointer; }
.tag-list { display: inline; }
.tag { display:inline-block; line-height: 1em; margin: 0 0.3em; padding: 0.2em; background-color: #d3d3d3; border: 1px #a9a9a9 solid; border-radius: 20px 0 0 20px; -moz-border-radius: 20px 0 0 20px; -webkit-border-radius: 20px 0 0 20px; }
.tag:hover { cursor: pointer; }
.tag:before {content: "â—‰"; padding-right: 0.2em; color: white; }
.tag.blank { border-style: dashed; }
.tag.blank:hover { border-color: black; }
