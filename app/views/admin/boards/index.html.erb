<h2>Manage Boards</h2>
<table class="table table-striped table-hover table-condensed">
  <thead>
  <tr>
    <th>#</th>
    <th>name</th>
    <th>total sections</th>
    <th>total ideas</th>
  </tr>
  </thead>
  <tbody>
  <% @boards.each_with_index do |board, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= truncate(board[:name]) %></td>
        <td><%= board[:total_sections_count] %></td>
        <td><%= board[:total_ideas_count] %></td>
      </tr>
  <%- end %>
  </tbody>
</table>
