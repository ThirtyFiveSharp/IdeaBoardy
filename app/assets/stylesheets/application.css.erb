.board-title .description { height: 2em; }
.board-title .description span { font-size: 1em; line-height: 1.1em; font-style: italic; }
.board-title .description input { font-size: 1em; font-style: italic; width: 80%; height: 1.1em; padding: 0; border-top: none; border-left: none; border-right: none; }

.command-bar { float: right; }
.command { display: inline-block; }
.command-icon { display: inline-block; vertical-align: text-bottom; width: 24px; height: 24px; }
