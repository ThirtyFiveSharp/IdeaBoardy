.color-picker .color-box.color-1 {background-color: #fff0f5;}
.color-picker .color-box.color-2 {background-color: #e6e6fa;}
.color-picker .color-box.color-3 {background-color: #ffffe0;}
.color-picker .color-box.color-4 {background-color: #e0ffff;}
.color-picker .color-box.color-5 {background-color: #ffefd5;}
.color-picker .palette {display: inline-block; position: absolute; top: 0; left: 24px; width: 144px; z-index: 999;}
.color-picker .palette .color-box {border-color: #d3d3d3;}
.color-picker .palette .color-box:hover {border-color: orange;}

.idea-list { display:block; list-style-type: none; }
.idea { position: relative; overflow: hidden; margin: 4px; float: left; width: 225px; height: 150px; border:1px #a9a9a9 solid; border-radius: 10px; -moz-border-radius: 10px; -webkit-border-radius: 10px; }
.idea.ui-draggable-dragging {background-color: #ffdd57;}
.idea:hover { border-color: black; cursor: pointer; }
