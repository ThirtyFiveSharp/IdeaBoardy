.tag.blank:hover:before {color:black; }
.concept:hover .concept-info, .concept-info.droppable-hover { color: #ee6633; }
.tag.droppable-hover { box-shadow: 0 0 6px 0 #ee6633; -moz-box-shadow: 0 0 6px 0 #ee6633; }

.section-command-bar { display: block; margin: 0.2em; line-height: 32px; height: 32px; float:right; vertical-align: middle; }
.section-command-bar .command.create-section { margin-right: 1em; text-decoration: underline; }
.section-command-bar .command .select2-container { vertical-align: middle; }
.section-command-bar .command:hover { cursor: pointer; }
.section-select-container { width: 9em; }

.section-list { display:block; list-style-type: none; }
.section-list .ui-button { font-size: 1em; }
.section { position: relative; overflow: hidden; margin: 5px; padding-top: 0.2em; float: left; border-radius: 10px; -moz-border-radius: 10px; -webkit-border-radius: 10px; background-color: #eeeeee; width: 470px;}
.narrow-rectangle .section {width: 470px;}
.wide-rectangle .section {width: 940px;}

.section-title { height: 2em; }
.section-switch { margin-left: 5px; vertical-align: baseline;}
.section-info  { display: inline; vertical-align: baseline; }
.section-info .view-section { display: inline-block; height: 2em; }
.section span.section-name { display: inline; vertical-align: baseline; font-size: 1.2em; max-width: 375px; line-height: 1.4em; white-space: nowrap; word-wrap: normal; overflow:hidden; text-overflow: ellipsis; }
.section .ideas-count { font-size: 0.8em; font-weight: bold; vertical-align: baseline; }
.section-info .edit-section { display: inline-block; height: 2em; }
.section input.section-name  { font-size: 1.2em; width: 211px; height: 1.4em; border-top: none; border-right: none; border-left: none; background-color: #eeeeee; }
.section-name a:hover {color: #D19405;}

.color-picker {display: inline-block; position: relative; vertical-align: middle;}
.color-picker .color-box {margin: 2px; line-height: 16px; height: 16px; width: 16px; display: inline-block; border: 2px solid gray; border-radius: 16px; -moz-border-radius: 16px; -webkit-border-radius: 16px; }
