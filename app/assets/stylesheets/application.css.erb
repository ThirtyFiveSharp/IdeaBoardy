.filter-ideas + .ui-reset { width: 20px; height: 20px; margin: 10px 12px; line-height: 14px; vertical-align: text-top; background-image: url(<%= %Q(#{ENV['RAILS_RELATIVE_URL_ROOT']}/assets/glyphicons-halflings.png) %>); background-repeat: no-repeat; background-position: -48px -96px; }

.trash-bin { display: inline-block; width: 32px; padding: 8px; background-color: #ffffff; border: 1px #a9a9a9 solid; border-radius: 10px; -moz-border-radius: 10px; -webkit-border-radius: 10px; }
.trash-bin:hover { cursor: pointer; border-color: #ff6666; }
