<h2>Export Board(s)</h2>
<%= form_tag({:action => "download"}, :method => "get") do %>
    <table class="table table-striped table-hover table-condensed">
      <thead>
      <tr>
        <th><%= check_box_tag(:select_all) %></th>
        <th>name</th>
        <th>total sections</th>
        <th>total ideas</th>
        <th>total tags</th>
        <th>total concepts</th>
      </tr>
      </thead>
      <tbody>
      <% @boards.each do |board| %>
          <tr>
            <td><%= check_box_tag("boards[]", board[:id]) %></td>
            <td><%= truncate(board[:name]) %></td>
            <td><%= board[:total_sections_count] %></td>
            <td><%= board[:total_ideas_count] %></td>
            <td><%= board[:total_tags_count] %></td>
            <td><%= board[:total_concepts_count] %></td>
          </tr>
      <%- end %>
      </tbody>
    </table>
    <%= submit_tag "Export", :class => "btn btn-primary", :name => 'export' %>
<% end %>