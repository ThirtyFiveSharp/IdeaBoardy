input.btn-cancel.ui-state-default { background: #a9a9a9; }
input.btn-cancel.ui-state-hover { background: #d3d3d3;}
input.btn-cancel.ui-state-active { background: #ffffff;}
input.btn-delete.ui-state-default { background: #ff9999;}
input.btn-delete.ui-state-hover { background: #ffc0cb;}
input.btn-delete.ui-state-active { background: #ffffff;}
