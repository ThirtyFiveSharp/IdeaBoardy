.idea-tag:hover, .idea-tag:hover a { color: #cc0000; text-decoration-color: #cc0000 }
.idea-tag.blank { width: 32px; height: 16px; background: url(<%= %Q(#{ENV['RAILS_RELATIVE_URL_ROOT']}/assets/background.png) %>) 0px -32px no-repeat; border: none; }
.idea-tag.blank:hover { background-position: -32px -32px; }
.idea .idea-wrapper { display:block; float:left; width: 160px; height: 100%; padding: 0 5px; overflow: hidden; }
.idea .idea-info { display: table; text-align: center; overflow: hidden; width: 160px; height: 120px; }
.idea .idea-content { display: table-cell; vertical-align: middle; width:100%; height: 120px; text-align: center; overflow: hidden;}
.idea .idea-command { text-align: center; }
.idea .idea-command a { text-decoration: underline; margin: 0.5em; }
.idea.blank { display: table; font-size: 1.1em; background-color: white; border-style: dashed; text-align: center; }
.idea.blank a { display: table-cell; vertical-align: middle; color: #a9a9a9; }
.idea.blank:hover a { color: black; }

#report .board-info {margin-bottom: 2em; text-align: center;}
