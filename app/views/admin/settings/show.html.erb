<%- model_class = Setting -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:slogan) %>:</strong></dt>
  <dd><%= @setting.slogan %></dd>
  <dt><strong><%= model_class.human_attribute_name(:app_version) %>:</strong></dt>
  <dd><%= @setting.app_version %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_settings_path(@setting), :class => 'btn' %>
</div>
